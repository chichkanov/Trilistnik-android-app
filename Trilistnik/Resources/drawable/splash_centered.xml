<?xml version="1.0" encoding="UTF-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">
  <!-- The background color, preferably the same as your normal theme -->
  <item android:drawable="@android:color/white"/>
  <!-- Your product logo - 144dp color version of your app icon -->
  <item android:bottom="@dimen/launch_screen_logo_bottom">
      <bitmap android:gravity="center" android:src="@drawable/logo_droid" />
   </item>
   <item android:bottom="@dimen/launch_screen_text_bottom">
      <bitmap android:gravity="bottom|center_horizontal" android:src="@drawable/logo_text" />
    </item>
</layer-list>
